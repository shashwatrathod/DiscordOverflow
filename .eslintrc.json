{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "google",
    "plugin:@typescript-eslint/recommended",
    "plugin:node/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "useTabs": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "endOfLine": "auto",
        "printWidth": 100,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 2
      }
    ]
  }
}
